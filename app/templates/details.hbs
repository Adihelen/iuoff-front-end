<!-- Modal -->
<div class="modal fade" id="tenhoInteresseModal" tabindex="-1" role="dialog" aria-labelledby="tenhoInteresseModalLabel" aria-hidden="true">
   <div class="modal-dialog modal-lg">
      <div class="modal-content">
         <div class="modal-header">
            <h5 class="modal-title" id="tenhoInteresseModalLabel">Tenho Interesse
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body">
            <div class="form-title">
               <h5 class="title">
                 {{model.title}}
                  <br>
                  <small>
                  Código: {{model.code}}
                  </small>
               </h5>
            </div>
            <form class="form-iuoff">           
               <div class="row">               
                <div class="form-group col-sm-4">
                    <label><i class="fa fa-user"></i>Nome</label>
                    {{input type="text" class="form-control" value=solicitacao.nome placeholder="ex: João Silva"}}
                </div>
                <div class="form-group col-sm-4">
                    <label><i class="fa fa-envelope"></i>E-mail</label>
                    {{input type="email" class="form-control" value=solicitacao.email placeholder="ex: email@email.com"}}
                </div>
                <div class="form-group col-sm-4">
                    <label><i class="fa fa-mobile"></i>Telefone</label>
                    {{input type="tel" class="form-control" value=solicitacao.telefone placeholder="ex: 99999-9999"}}
                </div>
               </div>

               <div class="row">               
                <div class="form-group col-sm-6">
                    <label><i class="fa fa-calendar"></i>Qtd. dias</label>
                    {{input type="text" class="form-control" value=solicitacao.qtdDias placeholder="ex: 2"}}
                </div>
                <div class="form-group col-sm-6">
                    <label><i class="fa fa-users"></i>Qtd. pessoas</label>
                    {{input type="text" class="form-control" value=solicitacao.qtdPessoas placeholder="ex: 2"}}
                </div>                
               </div>

               <div class="row">  
                <div class="form-group col-sm-6">
                    <label><i class="fa fa-users"></i>Qtd. crianças</label>
                    {{input type="text" class="form-control" value=solicitacao.qtdCriancas placeholder="ex: 2"}}
                </div>             
                <div class="form-group col-sm-6">
                    <label><i class="fa fa-calendar"></i>Idade crianças</label>
                    {{input type="text" class="form-control" value=solicitacao.idadeCriancas placeholder="ex: 2"}}
                </div>
               </div>

               <div class="form-group">
                  <label><i class="fa sticky-note"></i>Observações</label>
                  {{#textarea name="observacoes" value=solicitacao.detalhesAdicionais id="" cols="30" rows="5" placeholder="Digite aqui alguma obeservação..."}}{{/textarea}}
               </div>

               <div class="text-center">
                  {{#if salvandoSolicitacao}}
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <i class="fa fa-spinner fa-spin"></i> SALVANDO...
                        </div>
                    </div>                    
                  {{else}}
                    <button type="submit" {{action "salvarSolicitacao"}} class="btn btn-success bg-verde btn-lg">CONTINUAR</button>
                  {{/if}}
                  
               </div>
            </form>
         </div>
      </div>
   </div>
</div>